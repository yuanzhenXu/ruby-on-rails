<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body,size: "60x5" %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
<style>
  p {
    text-align: center;
    text-decoration: none;
    color: #42b983;
  }
</style>